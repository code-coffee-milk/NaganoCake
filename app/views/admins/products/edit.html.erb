<h1>Products#edit</h1>
<p>Find me in app/views/products/edit.html.erb</p>

<%= form_with model: @product, url: admins_product_path, local: true do |f| %>

 <div class = "field">
  <p>商品名</p>
  <%= f.text_field :name %>
 </div>

 <div class = "field">
  <p>商品説明</p>
  <%= f.text_area :introduction %>
 </div>

    <h4>価格</h4>
  <%= f.text_field :price %>

  <h4>ジャンル</h4>
  <%= f.text_field :genre_id %>
  
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  
 <div class = "field">
  <%= f.submit '更新',class: 'btn btn-success' %>
 </div>
<% end %>
