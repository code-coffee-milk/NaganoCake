<h1>Products#new</h1>

<h1>新規投稿</h1>

<%= form_with model: @product, url: admins_products_path, local:true do |f| %>

  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>説明</h4>
  <%= f.text_field :introduction %>
  
    <h4>価格</h4>
  <%= f.text_field :price %>

  <h4>ジャンル</h4>
  <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %>
  
  <h4>販売ステータス</h4>
   <%= f.radio_button :is_active, true %>
   <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
   <%= f.radio_button :is_active, false %>
   <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
  
    <h4>画像</h4>
  <%= f.attachment_field :image %>
  
  <%= f.submit '投稿' %>

<% end %>

<%= link_to "管理者用商品一覧", admins_products_path %>