<h1>Products#new</h1>

<h1>新規投稿</h1>

<%= form_with model: @product, url: admins_products_path, local:true do |f| %>

  <h4>商品</h4>
  <%= f.text_field :name %>

  <h4>説明</h4>
  <%= f.text_field :introduction %>
  
    <h4>価格</h4>
  <%= f.text_field :price %>

  <h4>ジャンル</h4>
  <%= f.text_field :genre_id %>
  
  <h4>販売ステータス</h4>
  <%= f.text_field :introduction %>
  
    <h4>画像</h4>
  <%= f.attachment_field :image %>
  
  <%= f.submit '投稿' %>

<% end %>

<%= link_to "管理者用商品一覧", admins_products_path %>