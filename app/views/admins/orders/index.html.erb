<h1>Orders#index</h1>
<p>Find me in app/views/orders/index.html.erb</p>

<div class="container">
<div class="row">
<h2>注文履歴一覧</h2>	
	<div class="col-xs-10 col-xs-offset-1">
		<table class="table table-hover table-bordered table-condensed">
		  <thead>
		    <tr class="info">
		      <th class="col-xs-3"><i class="far fa-clock"></i>購入日時</th>
	      	  <th><i class="far fa-user"></i>購入者</th>
		      <th class="col-xs-1">注文個数</th>
		      <th class="col-xs-2">注文ステータス</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @orders.each do |order| %>
		      <tr>
		        <td>
		          <%= link_to admins_order_path(order), data: {"turbolinks" => false}, :style=>"color:#528fff;"  do %>
		          	<%= order.created_at %>
		          <% end %>
		        </td>
		        <td class="text-left">
		          <%= order.customer %>
		        </td>
		        <td class="text-right">
		          <%= order.order_products.count %>
		        </td>
    	        <td>
    	      	  <%= order.status %>
     	        </td>
     	      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
</div>