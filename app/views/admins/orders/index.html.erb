<div class="container">
<h3>注文履歴一覧</h3>
		<table class="table table-sm">
		  <thead>
		    <tr>
		      <th scope="col">購入日時</th>
	      	<th scope="col">購入者</th>
		      <th scope="col">注文個数</th>
		      <th scope="col">注文ステータス</th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @orders.each do |order| %>
		      <tr>
		        <td>
		          <%= link_to admins_order_path(order), data: {"turbolinks" => false}, :style=>"color:#528fff;"  do %>
		          	<%= order.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d %H:%M:%S') %>
		          <% end %>
		        </td>
		        <td>
		          <%= order.customer.full_name %>
		        </td>
		        <td>
		          <%= order.total_count %>
		        </td>
  	        <td>
  		          <% if order.status == 0 %>
  		            <p>入金待ち</p>
  		          <% elsif order.status == 1 %>
  		            <p>入金確認</p>
  		          <% elsif order.status == 2 %>
  		            <p>製作中</p>
  		          <% elsif order.status == 3 %>
  		            <p>発送準備中</p>
  		          <% elsif order.status == 4 %>
  		            <p>発送済み</p>
  		          <% end %>
  		        </td>
     	      </tr>
		    <% end %>
		  </tbody>
		</table>
		<div class="paginate">
  <%= paginate @orders %>
  </div>
</div>