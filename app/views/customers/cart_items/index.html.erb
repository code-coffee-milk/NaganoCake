
<div class="container">
  <div class="row">
    <h4 class="ml-3 mt-3">ショッピングカート</h4>
    <div class="col-10 mx-auto">

<% if current_customer.cart_items.present? %>
<p class="text-right">
 <%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @cart_items.each do |cart_item| %>

    <tr>
      <td><%= attachment_image_tag cart_item.product, :image, :fill, 50, 50,format: "jpg", fallback: "sweets_colorful_cupcake_blue.png",size:'50x50'  %></td>
      <td><%= cart_item.product.name %></td>
      <td><%= cart_item.product.price.to_s(:delimited) %></td>
      <td>  <%= form_for(cart_item, url: customers_cart_item_path(cart_item), method: :patch, local: true) do |f| %>
    <%= f.number_field :quantity, class: "quantity", size: 10, min: 1, id: "quantity_cart" %>
    <%= f.submit "変更", class: "btn btn-info" %>
  <% end %></td>
      <td><%= (cart_item.product.price * cart_item.quantity).to_s(:delimited) %></td>
      <td><%= link_to "削除する", customers_cart_item_path(cart_item.id), class: "btn btn-danger", method: :delete, "data-confirm" => "削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


 <div class="row align-items-center mb-4">
  <div class="col-10 mx-auto">
    <div class="row align-items-center justify-content-between">
      <div class="ml-2 mt-3">
       <%= link_to "買い物を続ける", customers_products_path, class: "btn btn-primary" %>
      </div>
      <div class="col-4">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td "table-secondary">合計金額</td>
            <td><%= @total_price.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
      </div>
    </div>
  </div>
 </div>
   <div class="row">
     <div class="col-6 mx-auto mb-1">
        <% if @cart_items.present? %>
      <%= link_to "情報入力画面へ進む", new_customers_order_path, class: "btn btn-success btn-block" %>
        <% end %>
    </div>
<% else %>
      <p>お客様のカートに商品はありません。</p>
      <p><%= link_to "商品一覧", customers_products_path, class: "btn btn-warning" %>から商品をお探し下さい。</p>
<% end %>
</div>