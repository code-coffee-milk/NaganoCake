<div class="container">
  <div class="row">
    <h4 class="ml-3">ショッピングカート</h4>
    <div class="col-10 mx-auto">
<p class="text-right">
 <%= link_to "カートを空にする", cart_items_destroy_all_path, class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    
    <% @cart_items.each do |cart_item| %>

    <tr>
      <td><%= attachment_image_tag cart_item.product, :image, format: "jpg", size: "80x80", fallback: "no_image.jpg" %></td>
      <td><%= cart_item.product.name %></td>
      <td><%= product.price * 1.1 %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= cart_item.product.price %></td>
      <td><%=link_to "削除する", customers_cart_items(cart_items.id), class: "btn btn-danger", method: :delete,"data-confirm" => "削除しますか？" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>


 <div class="row">
     <div class="mx-auto">
     <%= link_to "買い物を続ける", root_path, class:"btn btn-secondary" %>
     </div>
   <div class="col-4 mx-auto">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td "table-secondary">合計金額</td>
          <td></td>
        </tr>
      </tbody>
    </table>
   </div>
 </div>
   <div class="row">
     <div class="col-6 mx-auto mb-1">
        <% if @cart_items.present? %>
      <%= link_to "情報入力画面へ進む", customers_orders_path, class:"btn btn-secondary btn-block" %>
        <% end %>
    </div>
   </div>
</div>