<div class="container">
  <div class="row my-2">
   <h3>配送先編集</h3>
   <%= form_for @shipping, url: customers_shipping_path(@shipping.id), method: :patch, html: { class: "pt-4" } do |f| %>
   <div class="row my-2">
      <div class= "shipping-edit-label"><%= f.label :"郵便番号(ハイフンなし)" %></div>
      <div class= "shipping-edit-input"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
    </div>

    <div class="row my-2">
      <div class= "shipping-edit-label"><%= f.label :"住所" %></div>
      <div class= "shipping-edit-input"><%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "62" %></div>
    </div>

    <div class="row my-2">
      <div class= "shipping-edit-label"><%= f.label :"宛名" %></div>
      <div class= "shipping-edit-input"><%= f.text_field :name, autofocus: true, autocomplete: "last_name" %></div>
      <div class= "shipping-edit-input">
       <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    </div>
   <% end %>
  </div>
</div>