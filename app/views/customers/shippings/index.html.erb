<div class="container">
  <div class="row my-2">
   <h3>配送先登録/一覧</h3>
  </div>
   <%= form_for @shipping, url: customers_shippings_path, method: :post, html: { class: "pt-4" } do |f| %>
    <%= render "shared/error_messages", resource: @shipping %>

    <div class="row my-2">
      <div class= "shipping-new-label"><%= f.label :"郵便番号(ハイフンなし)" %></div>
      <div class= "shipping-new-input"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
    </div>

    <div class="row my-2">
      <div class= "shipping-new-label"><%= f.label :"住所" %></div>
      <div class= "shipping-new-input"><%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "62" %></div>
    </div>

    <div class="row my-2">
      <div class= "shipping-new-label"><%= f.label :"宛名" %></div>
      <div class= "shipping-new-input"><%= f.text_field :name, autofocus: true, autocomplete: "last_name" %></div>
      <div class= "shipping-new-input">
       <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
   <% end %>
   <div class="row">
   <table class="table table-bordered shipping-table">
<thead>
    <tr>
      <th scope="col" class='shipping-table-postal-code'>郵便番号</th>
      <th scope="col" class='shipping-table-address'>住所</th>
      <th scope="col" class='shipping-table-name'>宛名</th>
      <th scope="col" class='shipping-table-button'></th>
    </tr>
     <% @shippings.each do |shipping| %>
      <tr>
       <td><%= shipping.postal_code %></td>
       <td><%= shipping.address %></td>
       <td><%= shipping.name %></td>
       <td><%= link_to "編集する", edit_customers_shipping_path(shipping.id), class: "btn btn-success" %>
       <%= link_to "削除する", customers_shipping_path(shipping.id), method: :delete, class: "btn btn-danger" %>
       </td>
      </tr>
  <% end %>
  </thead>
  </table>
  </div>
</div>