<div class="container">
  <h3>会員情報編集</h3>
  <%= form_for @customer , url:customers_customer_path(@customer.id),html: { class: "pt-4" } do |f| %>
  <div class="row my-2">
    <div class= "sing-up-label"><%= f.label :"名前"%></div>
    <div class= "sign-up-input-label"><%= f.label :"（姓）"%></div>
    <div class= "sing-up-input mr-5"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"%></div>
    <div class= "sign-up-input-label ml-5"><%= f.label :"（名）" %></div>
    <div class= "sing-up-input"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%></div>
  </div>


  <div class="row my-2">
    <div class= "sing-up-label"><%= f.label :"フリガナ"%></div>
    <div class= "sign-up-input-label"><%= f.label :"（セイ）" %></div>
    <div class= "sing-up-input mr-5"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana"%></div>
    <div class= "sign-up-input-label ml-5"><%= f.label :"（メイ）" %></div>
    <div class= "sing-up-input"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"%></div>
  </div>

  <div class="row my-2">
    <div class= "sing-up-label"><%= f.label :"メールアドレス"%></div>
    <div class= "sign-up-input-label"></div>
    <div class= "sing-up-input"><%= f.email_field :email, autofocus: true, autocomplete: "email"%></div>
  </div>

  <div class="row my-2">
    <div class= "sing-up-label"><%= f.label :"郵便番号(ハイフンなし)" %></div>
    <div class= "sign-up-input-label"></div>
    <div class= "sing-up-input"><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
  </div>

  <div class="row my-2">
    <div class= "sing-up-label"><%= f.label :"住所" %></div>
    <div class= "sign-up-input-label"></div>
    <div class= "sing-up-input"><%= f.text_field :address, autofocus: true, autocomplete: "address", :size=>"62" %></div>
  </div>

  <div class="row my-2">
    <div class= "sing-up-label"><%= f.label :"電話番号(ハイフンなし)"%></div>
    <div class= "sign-up-input-label"></div>
    <div class= "sing-up-input"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></div>
  </div>


  <div class="actions row py-5">
    <div class= "sing-up-label"></div>
    <div class= "sign-up-input-label"></div>
    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger mx-5" %>
  </div>
  <% end %>
</div>