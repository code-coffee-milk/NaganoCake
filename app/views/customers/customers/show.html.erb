<div class= "container">
  <h3>マイページ</h3>
  <div class="row px-4 py-4">
    <h4>登録情報</h4>
    <div class="actions px-2">
     <%= link_to "編集する", edit_customers_customer_path(@customer),class: "btn btn-success" %>
    </div>
  </div>
  <table class="table table-bordered">
    <tbody>
      <tr>
       <th scope="row">氏名</th>
       <td><%= @customer.last_name  %> <%= @customer.first_name%></td>
      </tr>
