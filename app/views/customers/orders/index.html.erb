<div class="container">
<h3>注文履歴一覧</h3>
<div class="row">
  <div class="col-xs-12">
      <% if @orders.present? %>
        <table class="table table-hover table-bordered table-condensed">
          <thead>
            <tr class="info">
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
    		          <%= order.created_at.in_time_zone('Tokyo').strftime('%Y/%m/%d') %>
    		        </td>
    		        <td>
    		          〒<%= order.shipping_postal_code %><br>
    		          <%= order.shipping_street_adress %><br>
    		          <%= order.shipping_name %>
    		        </td>
    		        <td>
    		          <% order.order_products.each do |product| %>
    		          <p><%= product.product.name %></p>
    		          <% end %>
    		        </td>
    		        <td>
    		          <%= order.total_payment.to_s(:delimited) %>円
    		        </td>
    		        <td>
    		          <% if order.status == 0 %>
    		            <p>入金待ち</p>
    		          <% elsif order.status == 1 %>
    		            <p>入金確認</p>
    		          <% elsif order.status == 2 %>
    		            <p>製作中</p>
    		          <% elsif order.status == 3 %>
    		            <p>発送準備</p>
    		          <% elsif order.status == 4 %>
    		            <p>発送済み</p>
    		          <% end %>
    		        </td>
         	      <td>
       	          <%= link_to "注文詳細", customers_order_path(order), class: "glyphicon glyphicon-zoom-in btn btn-primary" %>
       	        </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>注文履歴がありません。</p>
      <% end %>
    </div>
</div>
</div>